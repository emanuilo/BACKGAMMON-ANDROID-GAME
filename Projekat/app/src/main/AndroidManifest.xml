<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.emanu.pmu_projekat">

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/round_launcher_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.LoadingActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.GameCreationActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.StartedGameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.GameRecapActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.StatsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.OptionsActivity"
            android:screenOrientation="landscape" />

    </application>

</manifest>